git_commit_sha() {
  current_sha=$(git rev-parse --short HEAD 2> /dev/null)
  if [[ -n $current_sha ]]; then
    echo " %{$fg_bold[green]%}$current_sha%{$reset_color%}"
  fi
}

random_emoji() {
  EMOJI=(üí∏ üåµ ‚ö°Ô∏è üçê üêÆ üêÑ üçï üêù )
  echo "$EMOJI[$RANDOM%$#EMOJI+1]"
}

